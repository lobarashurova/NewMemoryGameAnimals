<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/levels_back">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/beginner_btn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/button_difficulty_1_star_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/easy_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/easy_btn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/button_difficulty_2_star_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/beginner_btn"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/medium_btn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/button_difficulty_3_star_0"
        app:layout_constraintEnd_toStartOf="@id/easy_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/beginner_btn" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/hard_btn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/button_difficulty_4_star_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/beginner_btn"
        app:layout_constraintTop_toBottomOf="@id/easy_btn" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/button_share"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:src="@drawable/button_share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.912" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/rate_btn"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/button_rate"
        app:layout_constraintBottom_toBottomOf="@id/button_share"
        app:layout_constraintRight_toLeftOf="@id/button_share"
        app:layout_constraintTop_toTopOf="@id/button_share" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/info_btn"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/mute_back"
        android:padding="35dp"
        android:src="@drawable/info"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/button_share"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button_share"
        app:layout_constraintTop_toTopOf="@id/button_share"
        app:layout_constraintVertical_bias="0.526" />


</androidx.constraintlayout.widget.ConstraintLayout>